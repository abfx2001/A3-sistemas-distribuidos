<%- include('includes/head')  %>
<%- include('includes/nav')  %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Consultas</h1>
      <p class="text-center lead">Crie ou edite sua consulta abaixo.</p>
      <%- include('includes/messages') %>
      <% if (contato._id) { %>
      <form action="/contato/edit/<%= contato._id %>" method="POST">
      <% } else {%>
        <form action="/contato/register" method="POST" class="form-cadastro">
      <% } %>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group">
          <label>Compromisso</label>
          <input value="<%= contato.compromisso %>" type="text" class="form-control" name="compromisso">
        </div>
        <div class="form-group">
          <label>Data</label>
          <input value="<%= contato.data %>" type="text" class="form-control" name="data">
        </div>
        <div class="form-group">
          <label>Tipo de Consulta</label>
          <input value="<%= contato.tipoConsulta %>" type="text" class="form-control" name="tipoConsulta">
        </div>
        <div class="row">
          <div class="form-group col-lg-4">
            <label>CEP</label>
            <input value="" type="text" class="form-control" name="cep" placeholder="Digite o CEP">
            <button type="submit" class="btn btn-primary btnCep">Pesquisar</button>
          </div>
          <div class="form-group col-lg-8">
            <label>Local</label>
            <input value="<%= contato.local %>" type="text" class="form-control local" name="local" placeholder="Caso não saiba o CEP, digite o local" id="local">
          </div>
        </div>
        <div class="form-group">
          <label>Nome do Médico ou Contato</label>
          <input value="<%= contato.nomeContato %>" type="text" class="form-control" name="nomeContato">
        </div>
        <div class="form-group">
          <label>Telefone</label>
          <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone">
        </div>
        <div class="form-group">
          <label>Email</label>
          <input value="<%= contato.email %>" type="email" class="form-control" name="email">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer')  %>
