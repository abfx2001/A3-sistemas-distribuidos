<%- include('includes/head')  %>
<%- include('includes/nav')  %>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="my-3 mx-2">
      <h1 class="text-center">Consultas</h1>
      <p class="text-center lead">consultas logo abaixo.</p>
      <%- include('includes/messages') %>
      <% if (contatos.length > 0) { %>
      <div class="table-responsive">
        <table class="table my-3 w-100">
          <thead>
            <tr>
              <th scope="col">Compromisso</th>
              <th scope="col">Data</th>
              <th scope="col">Tipo de Consulta</th>
              <th scope="col">Local</th>
              <th scope="col">Nome de Contato</th>
              <th scope="col">Telefone</th>
              <th scope="col">Email</th>
            </tr>
          </thead>
          <% contatos.forEach(contato => { %>
            <tr>
              <td><%= contato.compromisso %></td>
              <td><%= contato.data %></td>
              <td><%= contato.tipoConsulta %></td>
              <td><%= contato.local %></td>
              <td><%= contato.nomeContato %></td>
              <td><%= contato.telefone %></td>
              <td><%= contato.email %></td>
              <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
              <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
            </tr>
          <% }) %>
        </table>
      </div>
      <% } else { %>
        <p class="text-center lead">NÃ£o existem consultas na sua lista. :-(</p>
      <% } %>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer')  %>
